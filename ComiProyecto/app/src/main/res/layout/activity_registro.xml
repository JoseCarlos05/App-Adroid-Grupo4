<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro"
    android:background="@color/colorsecciones">

    <ScrollView
        android:id="@+id/contenedorFormulario"
        android:layout_width="369dp"
        android:layout_height="670dp"
        android:background="@drawable/estilofondologin"
        android:layout_margin="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/botonAtras"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icons8flecha90"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilodatologin"
                android:hint="Introduce tu nombre"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Correo electrónico"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilodatologin"
                android:hint="Introduce tu correo"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Contraseña"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilodatologin"
                android:hint="Introduce tu contraseña"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Teléfono"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilodatologin"
                android:hint="Introduce tu teléfono"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Altura (cm)"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoAltura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilodatologin"
                android:hint="Introduce tu altura"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Peso (kg)"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/campoPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilodatologin"
                android:hint="Introduce tu peso"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Fecha de nacimiento"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/campoFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selecciona tu fecha de nacimiento"
                android:focusable="false"
                android:clickable="true"
                android:background="@drawable/estilodatologin"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Objetivo"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spObjetivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilodatologin"
                android:padding="10dp" />

            <Button
                android:id="@+id/botonRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="?attr/colorButtonNormal"
                android:text="Registrar"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
